<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HelloMauiDefault.CollectionViewDemo"
             Title="CollectionViewDemo">
    <ScrollView>
        <CollectionView SelectionMode="Single" ItemsSource="{Binding Source=MauiLibrary}">
            <CollectionView.Header>
                <Label Text=".NET MAUI Libraries" Padding="0,0,0,8" VerticalOptions="Center" HorizontalOptions="Center"
                       HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>
            </CollectionView.Header>

            <CollectionView.Footer>
                <Label Text=".NET MAUI by Alphiletti" Padding="8,0,0,0" VerticalOptions="Center" HorizontalOptions="Center"
                        HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>
            </CollectionView.Footer>
            
            
        </CollectionView>
    </ScrollView>
</ContentPage>